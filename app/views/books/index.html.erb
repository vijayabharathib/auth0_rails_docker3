<p><%= notice %></p>
<div>
<header>
    <h1>Books</h1>
    <% if user_signed_in? %>
        <%= link_to current_user.name, new_book_path %>
    <% else %>
        <%= link_to 'Login to add',"/auth/auth0" %>
    <% end %>
</header>
<ul>
    <% @books.each do |book| %>
      <li class="book_entry">
        <h2><%= book.name %></h2>
        <h3><%= book.author %></div >
        <div class="actions"><%= link_to 'Show', book %>
      </li>
    <% end %>
</ul>
</div>
<br>
<%= console %>

<p><%= notice %></p>
<div>
<header>
    <%= render 'shelf_list' %>
</header>
<ul>
    <% @books.each do |book| %>
      <li class="book_entry">
        <h2><%= book.name %></h2>
        <h3><%= book.author %></div >
        <div class="actions"><%= link_to 'Show', book %>
      </li>
    <% end %>
</ul>
<div>
<% if user_signed_in? %>
    <%= link_to "Add New Book", new_book_path %>
<% else %>
    <%= link_to 'Login to add',"/auth/auth0" %>
<% end %>
</div>
</div>
<br>
<%= console %>
